              each cat in categories
                if cat.name === '本周口碑榜'
                  .billboard-hd
                    h4 本周口碑榜
                  .billboard-bd
                    table.table.table-hover
                      tbody
                        - var i = 1
                        if cat.movies && cat.movies.length > 0
                          each item in cat.movies
                            if i <= 10
                              tr
                                td.order=i++
